<Window x:Class="WindowSpam.OrderNumbers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowSpam"
        mc:Ignorable="d"
        Title="OrderNumbers" Height="350" Width="525" ResizeMode="CanMinimize">
    <Grid RenderTransformOrigin="0.509,0.647">
        <Grid.RowDefinitions>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="78*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="InitialNumberTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" Margin="0,52,0,0" TextAlignment="Center" FontSize="20" Height="52"/>
        <TextBlock x:Name="RulesTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Order the numbers from least to greatest. Don't forget the commas and spaces" VerticalAlignment="Top" Margin="0,10,0,0" Width="519" TextAlignment="Center" FontSize="14"/>
        <TextBox x:Name="AnswerTextBlock" HorizontalAlignment="Left" Height="49" Margin="0,88.5,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" FontSize="20" BorderBrush="#FF000208" BorderThickness="3" TextAlignment="Center"/>
    </Grid>
</Window>
